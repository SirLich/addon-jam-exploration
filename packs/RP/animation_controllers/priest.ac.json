{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.priest.actions": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "wave": "query.skin_id == 2"
                        },
                        {
                            "nod": "query.skin_id == 7"
                        },
                        {
                            "shake": "query.skin_id == 8 || query.skin_id == 9"
                        },
                        {
                            "bow": "query.skin_id == 12"
                        }
                    ]
                },
                "wave": {
                    "animations": [
                        "wave"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                },
                "nod": {
                    "animations": [
                        "nod"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                },
                "shake": {
                    "animations": [
                        "shake"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                },
                "bow": {
                    "animations": [
                        "bow"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                }
            }
        }
    }
}